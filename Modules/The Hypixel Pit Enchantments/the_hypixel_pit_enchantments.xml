<?xml version="1.0" encoding="UTF-8"?>
<project name="the_hypixel_pit_enchantments" default="all">
  
  
  <property file="the_hypixel_pit_enchantments.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.klib"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.spigot-1.8-r0.1-snapshot-latest.classpath">
    <pathelement location="${basedir}/../spigot-1.8-R0.1-SNAPSHOT-latest.jar"/>
  </path>
  
  <path id="library.spigot-1.8.8-r0.1-snapshot-latest.classpath">
    <pathelement location="${basedir}/../spigot-1.8.8-R0.1-SNAPSHOT-latest.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module The Hypixel Pit Enchantments -->
  
  <dirname property="module.the_hypixel_pit_enchantments.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.the_hypixel_pit_enchantments" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.the_hypixel_pit_enchantments" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.the_hypixel_pit_enchantments" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.the_hypixel_pit_enchantments" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="the_hypixel_pit_enchantments.output.dir" value="${module.the_hypixel_pit_enchantments.basedir}/out/production/The Hypixel Pit Enchantments"/>
  <property name="the_hypixel_pit_enchantments.testoutput.dir" value="${module.the_hypixel_pit_enchantments.basedir}/out/test/The Hypixel Pit Enchantments"/>
  
  <path id="the_hypixel_pit_enchantments.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="the_hypixel_pit_enchantments.module.production.classpath">
    <path refid="${module.jdk.classpath.the_hypixel_pit_enchantments}"/>
    <path refid="library.spigot-1.8-r0.1-snapshot-latest.classpath"/>
    <path refid="library.spigot-1.8.8-r0.1-snapshot-latest.classpath"/>
  </path>
  
  <path id="the_hypixel_pit_enchantments.runtime.production.module.classpath">
    <pathelement location="${the_hypixel_pit_enchantments.output.dir}"/>
    <path refid="library.spigot-1.8-r0.1-snapshot-latest.classpath"/>
    <path refid="library.spigot-1.8.8-r0.1-snapshot-latest.classpath"/>
  </path>
  
  <path id="the_hypixel_pit_enchantments.module.classpath">
    <path refid="${module.jdk.classpath.the_hypixel_pit_enchantments}"/>
    <pathelement location="${the_hypixel_pit_enchantments.output.dir}"/>
    <path refid="library.spigot-1.8-r0.1-snapshot-latest.classpath"/>
    <path refid="library.spigot-1.8.8-r0.1-snapshot-latest.classpath"/>
  </path>
  
  <path id="the_hypixel_pit_enchantments.runtime.module.classpath">
    <pathelement location="${the_hypixel_pit_enchantments.testoutput.dir}"/>
    <pathelement location="${the_hypixel_pit_enchantments.output.dir}"/>
    <path refid="library.spigot-1.8-r0.1-snapshot-latest.classpath"/>
    <path refid="library.spigot-1.8.8-r0.1-snapshot-latest.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.the_hypixel_pit_enchantments">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.the_hypixel_pit_enchantments">
    <patternset refid="excluded.from.module.the_hypixel_pit_enchantments"/>
  </patternset>
  
  <path id="the_hypixel_pit_enchantments.module.sourcepath">
    <dirset dir="${module.the_hypixel_pit_enchantments.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.the_hypixel_pit_enchantments" depends="compile.module.the_hypixel_pit_enchantments.production,compile.module.the_hypixel_pit_enchantments.tests" description="Compile module The Hypixel Pit Enchantments"/>
  
  <target name="compile.module.the_hypixel_pit_enchantments.production" depends="register.custom.compilers" description="Compile module The Hypixel Pit Enchantments; production classes">
    <mkdir dir="${the_hypixel_pit_enchantments.output.dir}"/>
    <javac2 destdir="${the_hypixel_pit_enchantments.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.the_hypixel_pit_enchantments}/javac">
      <compilerarg line="${compiler.args.the_hypixel_pit_enchantments}"/>
      <bootclasspath refid="the_hypixel_pit_enchantments.module.bootclasspath"/>
      <classpath refid="the_hypixel_pit_enchantments.module.production.classpath"/>
      <src refid="the_hypixel_pit_enchantments.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.the_hypixel_pit_enchantments"/>
    </javac2>
    
    <copy todir="${the_hypixel_pit_enchantments.output.dir}">
      <fileset dir="${module.the_hypixel_pit_enchantments.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.the_hypixel_pit_enchantments.tests" depends="register.custom.compilers,compile.module.the_hypixel_pit_enchantments.production" description="compile module The Hypixel Pit Enchantments; test classes" unless="skip.tests"/>
  
  <target name="clean.module.the_hypixel_pit_enchantments" description="cleanup module">
    <delete dir="${the_hypixel_pit_enchantments.output.dir}"/>
    <delete dir="${the_hypixel_pit_enchantments.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.the_hypixel_pit_enchantments" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.the_hypixel_pit_enchantments" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.the_hypixel_pit_enchantments:jar" value="${basedir}/../../LS/plugins"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.The Hypixel Pit Enchantments.jar" value="${artifacts.temp.dir}/The Hypixel Pit Enchantments.jar"/>
  </target>
  
  <target name="artifact.the_hypixel_pit_enchantments:jar" depends="init.artifacts, compile.module.the_hypixel_pit_enchantments" description="Build &#39;The Hypixel Pit Enchantments:jar&#39; artifact">
    <property name="artifact.temp.output.the_hypixel_pit_enchantments:jar" value="${artifacts.temp.dir}/The_Hypixel_Pit_Enchantments_jar"/>
    <mkdir dir="${artifact.temp.output.the_hypixel_pit_enchantments:jar}"/>
    <jar destfile="${temp.jar.path.The Hypixel Pit Enchantments.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${the_hypixel_pit_enchantments.output.dir}"/>
      <zipfileset src="${basedir}/../spigot-1.8-R0.1-SNAPSHOT-latest.jar"/>
    </jar>
    <copy file="${temp.jar.path.The Hypixel Pit Enchantments.jar}" tofile="${artifact.temp.output.the_hypixel_pit_enchantments:jar}/The Hypixel Pit Enchantments.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.the_hypixel_pit_enchantments:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.the_hypixel_pit_enchantments:jar}"/>
    <copy todir="${artifact.output.the_hypixel_pit_enchantments:jar}">
      <fileset dir="${artifact.temp.output.the_hypixel_pit_enchantments:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>

  <target name="yguard">
    <taskdef name="yguard"
             classname="com.yworks.yguard.YGuardTask"
             classpath="yguard.jar"/>
    <yguard>
      <!-- insert your yguard elements here -->
    </yguard>
  </target>
</project>